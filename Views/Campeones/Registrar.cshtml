@model PoyectoCRUD_Campeones.Models.Campeones

@{
    ViewBag.Title = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>NUEVO CAMPEON</h4>
            </div>
            <div class="panel-body">
                <form action="@Url.Action("RegistrarCampeon","Campeones")" method="post">
                    <div class="form-group">
                        <label>Nombres</label>
                        <input type="text" class="form-control" name="Nombres" />
                    </div>
                    <div class="form-group">
                        <label>Rol</label>
                        <input type="text" class="form-control" name="Rol" />
                    </div>
                    <div class="form-group">
                        <label>Ataque</label>
                        <input type="text" class="form-control" name="Ataque" />
                    </div>
                    <div class="form-group">
                        <label>Daño</label>
                        <input type="text" class="form-control" name="Daño" />
                    </div>
                    <button type="submit" class="btn btn-primary">Crear</button>
                    <a class="btn btn-warning" href="@Url.Action("Inicio","Campeones")">Volver</a>
                </form>
            </div>
        </div>
    </div>
</div>

